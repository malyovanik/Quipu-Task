<Window x:Class="Quipu_Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quipu_Task"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Deposit Amount:" />
                <TextBox x:Name="DepositAmountTextBox" />

                <TextBlock Text="Term (in months):" Margin="0,10,0,0" />
                <TextBox x:Name="TermTextBox" />

                <TextBlock Text="Interest Payment Method:" Margin="0,10,0,0" />
                <ComboBox x:Name="PaymentMethodComboBox">
                    <ComboBoxItem Content="Capitalization" />
                    <ComboBoxItem Content="Monthly Payout" />
                </ComboBox>

                <TextBlock Text="Currency:" Margin="0,10,0,0" />
                <ComboBox x:Name="CurrencyComboBox">
                    <ComboBoxItem Content="USD" />
                    <ComboBoxItem Content="EUR" />
                    <ComboBoxItem Content="GBP" />
                </ComboBox>

                <Button x:Name="CalculateButton" Content="Calculate" Margin="0,20,0,0" Click="CalculateButton_Click" />
            </StackPanel>

            <TextBlock x:Name="ResultTextBlock" Grid.Row="1" Margin="10" TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Window>
